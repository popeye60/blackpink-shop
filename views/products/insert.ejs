<%- include('../includes/head.ejs') %>

        <div class="container mt-3">
            <h2>New Product</h2>
            <div class="row">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-body">
                            <% if (errorMessage) { %>
                                <div class="alert alert-warning" role="alert">
                                    <%= errorMessage[0].param + ': '+ errorMessage[0].msg %>
                                </div>
                                <% } %>
                                <form method="POST">
                                    <div class="form-group">
                                        <label for="price">Product Name</label>
                                        <input type="text" class="form-control" name="product_name" placeholder="Product Name" value="">
                                    </div>
                                    <div class="form-group">
                                        <label for="product_name">price</label>
                                        <input type="text" class="form-control" name="price" placeholder="Price" value="">
                                    </div>
                                    <div class="form-group">
                                        <label for="price">Remaining</label>
                                        <input type="number" class="form-control" name="remaining" placeholder="Remaining" value="">
                                    </div>
                                    <div class="form-group">
                                        <label for="price">Details</label>
                                        <input type="number" class="form-control" name="details" placeholder="Details" value="">
                                    </div>
                                    <div class="form-group">
                                        <select class="form-control" name="category" value="<%= category %>">
                                            <option value="">Product Type</option>
                                            <option>Music album</option>
                                            <option>Fashion</option>
                                            <option>Photobook</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label for="price">image</label>
                                        <input type="test" class="form-control" name="image" placeholder="Image" value="">
                                    </div><br>
                                    <a href="/products/search" class="btn btn-secondary"><i class="fa fa-chevron-left" aria-hidden="true"></i> Back</a>
                                    <button type="submit" class="btn btn-success"> <i class="fa fa-floppy-o" aria-hidden="true"></i> Save</button>
                                </form>
                        </div>
                    </div>
                </div>
            </div>
            <%- include('../includes/end.ejs') %>