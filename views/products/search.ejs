<%- include('../includes/head.ejs') %>
<!-- <div class="container mt-3"> -->
    <div class="tm-container">
        <div class="tm-text-white tm-page-header-container">
          <!-- <i class="fas fa-mug-hot fa-2x tm-page-icon"></i> -->
          <h1 class="tm-page-header">Manage products</h1>
        </div>
        <div class="col-md-2">
            <a href="/products/insert" class="btn btn-primary btn-block"><i class="fa fa-plus" aria-hidden="true"></i> New Product</a>
        </div>
        <div class="tm-main-content">
          <div id="tm-intro-img"></div>
        <br><br>
        
        <div class="tm-main-content">
        <!-- <div id="tm-intro-img"></div> -->
        <div class="row ">
            <section class="tm-section">
                <div class="tm-responsive-table">
                    <table>
                        <thead>
                        <tr class="tm-tr-header" >
                            <th>Order</th>
                            <th>Image</th>
                            <th>Product name</th>
                            <th>Detail</th>
                            <th>Remain</th>
                            <th>Price</th>
                            <th>Product Type</th>
                            <th></th>
                        </tr>
                    </thead>
                        <tbody>
                            <% if (prods.length> 0) { %>
                                <% prods.map((product, index)=> { %>
                            <tr >
                                <td class="tm-text-left">
                                    <%- (index+1) %>
                                </td>
                                <td class="tm-text-left">
                                    <img class="card-img-top" style="width:100px; height:100px"
                                        src="<%- product.image%>" alt="Card image cap">
                                </td>
                                <td class="tm-text-left">
                                    <%- product.product_name%>
                                </td>
                                <td class="tm-text-left">
                                    <%- product.details%>
                                </td>
                                <td class="tm-text-left">
                                    <%- product.remaining%>
                                </td>
                                <td class="tm-text-left">
                                    <%- product.price%>
                                </td>
                                <td class="tm-text-left">
                                    <%- product.category%>
                                </td>
                                <td class="tm-text-left">
                                    <a href="<%- '/update/'+product._id%>" class="btn btn-warning"><i class="fa fa-pencil-square-o" aria-hidden="true"></i> Edit</a>
                                    <a href="<%- '/delete/'+product._id%>" onclick="return confirm('Are you sure you want to delete this item?');" class="btn btn-danger"> <i class="fa fa-trash-o" aria-hidden="true"></i> Delete</a>
                                </td>
                            </tr>
                            <% }) %>
                            <% } else { %>
                                <h1>No Products Found</h1>
                                <% } %>
                        </tbody>
                    </table>
                </div>
        </section>
    </div>
<!-- </div> -->

<%- include('../includes/end.ejs') %>
